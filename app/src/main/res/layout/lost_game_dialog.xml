<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/transparent_squares"
    android:orientation="vertical">

    <TextView
        style="@style/LightGilroyFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="Oops! You lost. Give it another shot"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/go_home_dialog_button"
        style="@style/LightGilroyFont"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:background="@drawable/press_states"
        android:textColor="@drawable/text_press"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingVertical="8dp"
        android:text="Go Home"
        android:textSize="20sp" />


</LinearLayout>